{
    "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
    "files": {
        "experimentalScannerIgnores": [
            "coverage/**",
            "node_modules/**",
            "dist/**",
            "build/**",
            ".vite/**"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    }
}
